<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".UploadProjectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header dengan Logo dan Judul -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tiger" />

                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="ADD LOP"
                    android:textColor="#D32F2F"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Menambahkan LOP baru"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/formProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:indicatorColor="#D32F2F"
                    app:trackColor="#E0E0E0"
                    android:progress="0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 1: Info Dasar Proyek -->
        <androidx.cardview.widget.CardView
            android:id="@+id/basicInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Dasar Proyek"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Status Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/statusInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Status Proyek (B)"
                    app:startIconDrawable="@drawable/ic_status"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/statusDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Witel Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/witelInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Witel (C)"
                    app:startIconDrawable="@drawable/ic_location">

                    <AutoCompleteTextView
                        android:id="@+id/witelDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Site ID Location - REQUIRED FIELD -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/siteIdInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Site ID Location (M)*"
                    app:startIconDrawable="@drawable/ic_location"
                    app:helperText="Wajib diisi"
                    app:helperTextTextColor="#D32F2F">

                    <EditText
                        android:id="@+id/siteIdInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 2: Lokasi dan Koordinat -->
        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/basicInfoCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi dan Koordinat"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Koordinat -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/koordinatInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Koordinat (N)"
                    app:startIconDrawable="@drawable/ic_location_photo">

                    <EditText
                        android:id="@+id/koordinatInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Current Location Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gunakan Lokasi Saat Ini"
                    app:icon="@drawable/ic_location"
                    app:cornerRadius="8dp"
                    android:backgroundTint="#D32F2F" />

                <!-- Kecamatan Lokasi OLT -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kecamatanLokasiInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Kecamatan Lokasi OLT (P)"
                    app:startIconDrawable="@drawable/ic_location">

                    <EditText
                        android:id="@+id/kecamatanLokasiInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 3: Spesifikasi OLT -->
        <androidx.cardview.widget.CardView
            android:id="@+id/specificationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/locationCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesifikasi Teknis OLT"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Size OLT Dropdown with Icon -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sizeOltInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Size OLT (I)"
                    app:startIconDrawable="@drawable/ic_cabinet">

                    <AutoCompleteTextView
                        android:id="@+id/sizeOltDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Layout untuk 2 item dalam 1 baris -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Platform Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/platformInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Platform (J)"
                        app:startIconDrawable="@drawable/ic_foundation">

                        <AutoCompleteTextView
                            android:id="@+id/platformDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Type Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/typeInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Type (K)"
                        app:startIconDrawable="@drawable/ic_installation">

                        <AutoCompleteTextView
                            android:id="@+id/typeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Host & Module dalam satu baris -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Hostname -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hostnameInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginEnd="6dp"
                        android:hint="Hostname (H)"
                        app:startIconDrawable="@drawable/ic_tv">

                        <EditText
                            android:id="@+id/hostnameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jumlah Modul -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/jmlModulInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Jml Modul (L)"
                        >

                        <EditText
                            android:id="@+id/jmlModulInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Catuan AC Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/catuanAcInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Catuan AC (V)"
                    app:startIconDrawable="@drawable/ic_replace">

                    <AutoCompleteTextView
                        android:id="@+id/catuanAcDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 4: STO dan Koneksi -->
        <androidx.cardview.widget.CardView
            android:id="@+id/stoConnectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/specificationCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STO dan Koneksi"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Layout untuk Kode & Nama STO dalam 1 baris -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Kode STO -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/kodeStoInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Kode STO (D)"
                        >

                        <EditText
                            android:id="@+id/kodeStoInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nama STO Catuan Uplink -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/namaStoInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginStart="6dp"
                        android:hint="Nama STO Uplink (E)"
                        app:startIconDrawable="@drawable/ic_list">

                        <EditText
                            android:id="@+id/namaStoInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Layout untuk Port & SFP dalam 1 baris -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Port Metro -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/portMetroInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Port Metro (F)"
                        >

                        <EditText
                            android:id="@+id/portMetroInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- SFP -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sfpInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="SFP (G)"
                        app:startIconDrawable="@drawable/ic_id">

                        <EditText
                            android:id="@+id/sfpInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- ODP dan Port -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- ODP -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/odpInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="ODP (AB)"
                        app:startIconDrawable="@drawable/ic_replace">

                        <EditText
                            android:id="@+id/odpInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Port -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/portInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Port (AC)"
                        >

                        <EditText
                            android:id="@+id/portInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 5: Waktu Proyek -->
        <androidx.cardview.widget.CardView
            android:id="@+id/projectTimingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/stoConnectionCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waktu Proyek"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Start Project (Date) dengan Material date picker -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/startProjectInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Start Project (U)"
                    app:startIconDrawable="@drawable/ic_calendar">

                    <EditText
                        android:id="@+id/startProjectInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- TOC (Date) with Material date picker -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tocInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="TOC (T)"
                    app:startIconDrawable="@drawable/ic_document">

                    <EditText
                        android:id="@+id/tocInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tgl Plan OA (Date) with Material date picker -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tglPlanOaInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Tanggal Plan OA (Y)"
                    app:startIconDrawable="@drawable/ic_calendar">

                    <EditText
                        android:id="@+id/tglPlanOaInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Week Plan OA - ReadOnly -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weekPlanOaInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Week Plan OA (Z)"
                    app:startIconDrawable="@drawable/ic_camera_alt">

                    <EditText
                        android:id="@+id/weekPlanOaInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group 6: Kontrak dan Kendala -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contractAndIssuesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/projectTimingCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontrak dan Kendala"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- LOP Downlink (dipindahkan ke atas) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lopDownlinkInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="LOP Downlink (R)"
                    app:startIconDrawable="@drawable/ic_email">

                    <EditText
                        android:id="@+id/lopDownlinkInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Kontrak Pengadaan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kontrakPengadaanInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Kontrak Pengadaan (S)"
                    app:startIconDrawable="@drawable/ic_document">

                    <EditText
                        android:id="@+id/kontrakPengadaanInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Layout untuk Kode IHLD dan Site Provider dalam 1 baris (Site Provider dipindahkan ke dalam baris ini) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Kode IHLD -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/kodeIhldInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Kode IHLD (Q)"
                        app:startIconDrawable="@drawable/ic_image_placeholder">

                        <EditText
                            android:id="@+id/kodeIhldInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Site Provider - Dropdown (dipindahkan sebagai half-width) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/siteProviderInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Site Provider (O)"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/siteProviderInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Kendala Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kendalaInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Kendala (X)"
                    app:startIconDrawable="@drawable/ic_issue">

                    <AutoCompleteTextView
                        android:id="@+id/kendalaDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last Issue -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastIssueInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Last Issue (W)"
                    app:startIconDrawable="@drawable/ic_image_error">

                    <EditText
                        android:id="@+id/lastIssueInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons - Horizontal Layout with equal sizes -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/contractAndIssuesCard"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Back Button - Positioned Left -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:text="KEMBALI"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                app:cornerRadius="8dp"
                app:rippleColor="#80FFFFFF"
                app:strokeColor="#757575"
                app:strokeWidth="1dp"/>

            <!-- Add Data Button - Positioned Right -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddData"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:text="SIMPAN DATA"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                app:cornerRadius="8dp"
                app:elevation="4dp"
                app:rippleColor="#80FFFFFF"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>