<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Ubah tema utama menjadi turunan dari MaterialComponents -->
    <style name="Theme.TelGO" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize additional theme attributes as needed -->
    </style>

    <!-- MaterialAppTheme sudah benar -->
    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
</resources>