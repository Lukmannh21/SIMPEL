<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="32dp"
            android:animateLayoutChanges="true">

            <!-- Welcome Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/telgoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIMPEL"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_telkomsel_dark"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_splash_screen"
                    android:scaleType="centerCrop"
                    android:contentDescription="App Logo"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/red_telkomsel_dark"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/red_telkomsel_dark"
                        app:hintEnabled="true"
                        app:boxBackgroundColor="@color/white"
                        app:endIconMode="custom"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/ivShowPassword"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_visibility"
                            android:contentDescription="Toggle password visibility" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Fingerprint Login Option - ADDED -->
                    <LinearLayout
                        android:id="@+id/fingerprintPromptLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Login with fingerprint"
                            android:textColor="@color/red_telkomsel_dark" />

                        <ImageButton
                            android:id="@+id/btnFingerprint"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_fingerprint"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/red_telkomsel_dark"
                            android:contentDescription="Login with fingerprint" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot password?"
                        android:textColor="@color/red_telkomsel_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="end"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                android:layout_marginBottom="24dp"
                app:backgroundTint="@color/red_telkomsel_dark"
                app:elevation="6dp"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/registerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up Now"
                    android:textColor="@color/red_telkomsel_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Loading overlay -->
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/red_telkomsel_dark"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>